{
  "name": "acme",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo run lint",
    "check": "biome check --write . && turbo check-types",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @acme/backend dev",
    "dev:setup": "turbo -F @acme/backend dev:setup",
    "convex:seed": "pnpm -C packages/backend seed",
    "convex:reset": "node scripts/convex-reset.mjs"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "turbo": "^2.5.4"
  },
  "packageManager": "pnpm@10.18.3",
  "dependencies": {
    "@convex-dev/better-auth": "^0.9.7",
    "better-auth": "1.3.34"
  }
}
